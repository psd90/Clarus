{{page-title "Add a review"}}
<main class="container mt-5">
    <h1>Add a review</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><LinkTo @route="index">Home</LinkTo></li>
        <li class="breadcrumb-item"></li>
        <li class="breadcrumb-item">Add Review</li>
    </ol>
    <section class="w-50 ml-auto text-right mb-5">
        <div class="row">
            <span class="col">Movie Name</span>
            <span class="col">{{this.name}}</span>
        </div>
        <div class="row">
            <span class="col">Rating</span>
            <span class="col">{{this.rating}}</span>
        </div>
        <div class="row">
            <span class="col">Review</span>
            <span class="col">{{this.review}}</span>
        </div>
    </section>

    <button class="btn btn-success float-right" type="button">Submit</button>
</main>
{{outlet}}